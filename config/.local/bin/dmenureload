#!/bin/sh
opt="bspwm sxhkd polybar mpd dunst"
program="$(echo "$opt" | sed 's/ /\n/g' | dmenu -i -p "Which program do you want to restart?")"
case $program in
	bspwm) bspc wm -r;;
	sxhkd) pkill -USR1 -x sxhkd;;
	polybar) pkill polybar; ~/.config/polybar/launch.sh;;
	mpd) pkill mpd; mpd &;;
	dunst) pkill dunst; dunst;;
	*) exit
esac
notify-send "$program reloaded."
