# Aliases
alias sudo='sudo '
alias ls='ls --color=auto --group-directories-first'
alias hc="history -c"
alias out="pkill -kill -u $(whoami)"
alias bat="cat /sys/class/power_supply/BAT?/capacity"
alias cp="cp -riv"
alias mv="mv -iv"
alias rm="rm -v"
alias mkd="mkdir -pv"

# programs
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x -f bestaudio/best"
alias nc='ncmpcpp'
alias ra='ranger'
alias nm='neomutt'
alias ab='abook -C $HOME/.config/abook/abookrc --datafile $HOME/.config/abook/addressbook'
alias installfont='sudo fc-cache -f -v'

# vi
alias e="$EDITOR"
alias f="$FILE"
alias vi="nvim"
alias vidiff="nvim -d"
alias vf="vifmrun"
alias svim='sudoedit'

# tmux
alias tm="tmux"
alias tmn="tmux new -s"
alias tmls"tmux ls"
alias tma="tmux a -t"
alias tmk="tmux kill-session -t"
alias tmks="tmux kill-server"

# cURL
wttr()    { curl wttr.in/"${1}" ;}
cht() { curl cht.sh/"${1}" ;}

# youtube-dl
alias yt-video='youtube-dl -f bestvideo -o "%(title)s.%(ext)s" -4'
alias yt-webm='youtube-dl -f webm -o "%(title)s.%(ext)s" -4'
alias yt-audio='youtube-dl -f bestaudio -o "%(title)s.%(ext)s" -4'
alias yt-music='youtube-dl -f bestaudio -x --audio-format mp3 --audio-quality 0 -o "%(title)s.%(ext)s" -4'
alias yt-opus='youtube-dl -x --audio-format opus -o "%(title)s.%(ext)s" -4'
alias yt-vorbis='youtube-dl -x --audio-format vorbis -o "%(title)s.%(ext)s" -4'
alias yt-thumbnail='youtube-dl --write-thumbnail --skip-download -o "%(title)s.%(ext)s" -4'

# Pacmna
alias up="sudo pacman -Syu"
alias p="sudo pacman"
alias owo="yay -Slq | fzf -m --preview 'yay -Si {1}' --height 60% | yay -S -"
alias uwu="yay -Qq | fzf -m --preview 'yay -Si {1}' --height 60% | xargs -ro yay -Rns"
alias ser="yay -Slq | fzf -m --preview 'yay -Si {1}' --height 60% | yay -Si -"
alias sel="yay -Qq | fzf -m --preview 'yay -Si {1}' --height 60% | yay -Si -"
alias paco="sudo pacman -Rns $(pacman -Qtdq)"

# fzf
fe()   { find . -type f | fzf | xargs -r "$EDITOR" ;}
cdf() { cd "$(find . -type d | fzf --preview '')" ;}
fs() { $FILE "$(find . -type d | fzf --preview '')" ;}

# function
open() { xdg-open "$1" &> /dev/null & disown;}
psgrep() { ps axuf | grep -v grep | grep "$@" -i --color=auto;}
fname() { find . -iname "*$@*";}
mkdircd () { mkdir -p "$@" && eval cd "\"\$$#\""; }

conf() {
	case $1 in
		bspwm)		$EDITOR ~/.config/bspwm/bspwmrc ;;
		sxhkd)		$EDITOR ~/.config/sxhkd/sxhkdrc ;;
		mpd)		$EDITOR ~/.config/mpd/mpd.conf ;;
		mutt)		$EDITOR ~/.config/mutt/muttrc ;;
		ncmpcpp)	$EDITOR ~/.config/ncmpcpp/config ;;
		pacman)		sudoedit /etc/pacman.conf ;;
		ranger)		$EDITOR ~/.config/ranger/rc.conf ;;
		tmux)	    $EDITOR	~/.tmux.conf ;;
		vim)		$EDITOR ~/.config/nvim/init.vim ;;
		xinit)		$EDITOR ~/.xinitrc ;;
		xresources)	$EDITOR ~/.Xresources && xrdb ~/.Xresources ;;
		zathura)	$EDITOR ~/.config/zathura/zathurarc ;;
		zsh)		$EDITOR ~/.config/zsh/.zshrc && source ~/.config/zsh/.zshrc ;;
		hosts)		sudoedit /etc/hosts ;;
		sudo)		sudoedit /etc/sudoers ;;
		*)			echo "Unknown application: $1" ;;
	esac
}

# vim: filetype=zsh
