#!/bin/sh
bar() {
	vol=$(xbacklight -get)
	vol=${vol%%.*}
	vol=$((vol / 5))
	i=1
	printf "<span color='#84a0c6'>"
	[ 0 -eq "$vol" ] && printf '</span>'
	while [ "$i" -le 20 ]; do
		[ "$i" -le "$vol" ] && printf '━' || printf '┄'
		[ "$i" -eq "$vol" ] && printf '</span>'
		i=$((i+1))
	done
}
dunstify -t 1000 -r 9955 "Brightness" "$(bar)" &
