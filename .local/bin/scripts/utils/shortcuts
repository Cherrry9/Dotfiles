#!/bin/sh
[ "$1" ]  && sed "s/\s.*#.*$//;/^\s*$/d" ~/.config/zsh/sc && exit
while read -r line; do
  line=$(echo $line | sed "s@~@$HOME@")
  set -- $line
  case $line in
    \#*|"") continue
  esac
  if [ -d "$2" ]; then
    echo "alias $1='cd \"$2\"'"
    echo "hash -d $1=\"$2\""
  else
    echo "alias $1='v \"$2\"'"
  fi
  echo "export $1=\"$2\""
done <~/.config/zsh/sc >~/.config/zsh/sc.sh
