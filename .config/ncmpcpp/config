# directories
mpd_music_dir = "~/music"
lyrics_directory = "~/.local/share/lyrics"
ncmpcpp_directory  = "~/.config/ncmpcpp"

# behaviour
message_delay_time = 2
autocenter_mode = "yes"
centered_cursor = "yes"
ignore_leading_the = "yes"
allow_for_physical_item_deletion = "yes"
external_editor = "nvim"
default_place_to_search_in = "database"

# visualizer
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_output_name = "visualizer"
visualizer_in_stereo = "yes"
visualizer_sync_interval = 30
visualizer_look = ●●

# appearance
user_interface = "alternative"
playlist_display_mode = "classic" (classic/columns)
browser_display_mode = "classic" (classic/columns)
search_engine_display_mode = "classic" (classic/columns)
main_window_color = "white"
titles_visibility = "no"
enable_window_title = "no"
statusbar_visibility = "no"
mouse_support = "yes"
display_remaining_time = "no"
discard_colors_if_item_is_selected = "yes"
header_visibility = "no"
header_window_color = "white"
alternative_header_second_line_format = "%a"
progressbar_color = "white"
progressbar_elapsed_color = "blue"
progressbar_look = "━┄┄"
volume_color = "blue"
playlist_separate_albums = "no"
playlist_show_remaining_time = "yes"
browser_playlist_prefix = "$b$4playlist$/b$0 "
clock_display_seconds = "no"
display_volume_level = "yes"
display_bitrate = "no"
alternative_ui_separator_color = "244"
empty_tag_marker = "──"
current_item_prefix = "$4>> $9"
current_item_suffix = $(end)$/b$9
current_item_inactive_column_prefix = $5
current_item_inactive_column_suffix = $/r$(end)$0
now_playing_prefix = $b
now_playing_suffix = $/b
selected_item_prefix = "$4"
modified_item_prefix = $4* $9
song_library_format = {%t}|{%f}
song_list_format = "{$7%a $8⁃ }$5{%t}|{%f}$R$9{%l}"
song_columns_list_format = "(10)[magenta]{l} (20)[white]{a} (30)[cyan]{b} (40)[blue]{t|f:Title}"

# █▓▒░ cheat sheet
# %l - length
# %f - filename
# %D - directory
# %a - artist
# %t - title
# %b - album
# %y - year
# %n - track number (01/12 -> 01)
# %N - full track info (01/12 -> 01/12)
# %g - genre
# %c - composer
# %p - performer
# %d - disc
# %C - comment
# $R - begin right alignment
# █▓▒░ colors
# $0 - default window color
# $1 - black
# $2 - red
# $3 - green
# $4 - yellow
# $5 - blue
# $6 - magenta
# $7 - cyan
# $8 - white
# $9 - end of current color
